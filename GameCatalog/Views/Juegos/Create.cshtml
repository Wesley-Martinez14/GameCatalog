@model GameCatalog.Models.Juego

@{
    ViewData["Title"] = "Agregar Juego";
}
<div class="p-3">
<h1>Ingrese los datos para agregar el juego</h1>

<hr />
<div class="row">
        <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="GeneroJuegoId" class="control-label">Genero Juego</label>
                <select asp-for="GeneroJuegoId" class ="form-control" asp-items="ViewBag.GeneroJuegoId"></select>
            </div>
            <div class="form-group">
                    <label asp-for="ClasificacionJuegoId" class="control-label">Clasificacion Juego</label>
                <select asp-for="ClasificacionJuegoId" class ="form-control" asp-items="ViewBag.ClasificacionJuegoId"></select>
            </div>
            <div class="form-group">
                    <label asp-for="EmpresaJuegoId" class="control-label">Empresa Juego</label>
                <select asp-for="EmpresaJuegoId" class ="form-control" asp-items="ViewBag.EmpresaJuegoId"></select>
            </div>
            <div class="form-group">
                    <label asp-for="DisponibilidadJuegoId" class="control-label">Disponibilidad</label>
                <select asp-for="DisponibilidadJuegoId" class ="form-control" asp-items="ViewBag.DisponibilidadJuegoId"></select>
            </div>
            <div class="form-group">
                    <label asp-for="FechaEstreno" class="control-label">Fecha Estreno</label>
                <input asp-for="FechaEstreno" class="form-control" />
                <span asp-validation-for="FechaEstreno" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-md-end gap-2 pt-3">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
