@model GameCatalog.Models.Juego

@{
    ViewData["Title"] = "Borrar Juego";
}


<div class="p-3">

    <h1>Estas seguro que quieres borrarlo?</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Fecha Estreno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEstreno)
        </dd>
        <dt class = "col-sm-2">
            Clasificacion Juego
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClasificacionJuego.NombreClasificacion)
        </dd>
        <dt class = "col-sm-2">
            Disponibilidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisponibilidadJuego.NombreDisponibilidad)
        </dd>
        <dt class = "col-sm-2">
            Empresa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmpresaJuego.NombreEmpresa)
        </dd>
        <dt class = "col-sm-2">
            Genero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GeneroJuego.NombreGenero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="JuegoId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </form>
</div>
