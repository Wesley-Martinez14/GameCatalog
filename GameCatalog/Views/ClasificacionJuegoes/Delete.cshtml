@model GameCatalog.Models.ClasificacionJuego

@{
    ViewData["Title"] = "Borrar clasificacion";
}

<div class="p-3">
    <h1>Estas seguro que quieres borrarlo?</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Clasificacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreClasificacion)
        </dd>
        <dt class = "col-sm-2">
            Descripcion de la clasificacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionClasificacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClasificacionId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </form>
</div>
