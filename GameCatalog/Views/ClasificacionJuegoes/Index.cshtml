@model IEnumerable<GameCatalog.Models.ClasificacionJuego>

@{
    ViewData["Title"] = "Clasificacion";
}
<div class="p-2">
@if(Model.Count() > 0)
    {
         <table class="table">
    <thead>
        <tr>
            <th>
                Clasificacion
            </th>
            <th>
                Descripcion de la clasificacion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreClasificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionClasificacion)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.ClasificacionId">Editar</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.ClasificacionId">Detalles</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ClasificacionId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
        </table>
    }
    else
    {
        <p>No hay clasificaciones registradas</p>
    }
    <div class="d-flex justify-content-end pt-2">
        <a asp-action="Create" asp-controller="ClasificacionJuegoes" class="btn btn-primary">Agregar clasificacion</a>
    </div>
</div>