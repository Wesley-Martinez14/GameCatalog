@model GameCatalog.Models.ClasificacionJuego

@{
    ViewData["Title"] = "Editar Clasificacion";
}
<div class="p-3">
    <h1>Edite los datos que desees</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClasificacionId" />
            <div class="form-group">
                <label asp-for="NombreClasificacion" class="control-label"></label>
                <input asp-for="NombreClasificacion" class="form-control" />
                <span asp-validation-for="NombreClasificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionClasificacion" class="control-label"></label>
                <input asp-for="DescripcionClasificacion" class="form-control" />
                <span asp-validation-for="DescripcionClasificacion" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end gap-2 pt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
