@model GameCatalog.Models.GeneroJuego

@{
    ViewData["Title"] = "Borrar Genero";
}


<div class="p-3">
    <h1>Estas seguro que quieres borrarlo?</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreGenero)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionGenero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GeneroId" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </form>
</div>
