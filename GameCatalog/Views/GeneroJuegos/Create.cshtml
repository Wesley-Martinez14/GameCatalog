@model GameCatalog.Models.GeneroJuego

@{
    ViewData["Title"] = "Agregar genero";
}
<div class="p-3">
<h1>Ingrese los datos para agregar el genero</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="NombreGenero" class="control-label">Nombre del Genero</label>
                <input asp-for="NombreGenero" class="form-control" />
                <span asp-validation-for="NombreGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="DescripcionGenero" class="control-label">Descripcion del Genero</label>
                <input asp-for="DescripcionGenero" class="form-control" />
                <span asp-validation-for="DescripcionGenero" class="text-danger"></span>
            </div>
                <div class="form-group  d-flex justify-content-md-end gap-2 pt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
