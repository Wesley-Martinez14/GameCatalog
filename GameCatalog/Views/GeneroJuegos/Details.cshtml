@model GameCatalog.Models.GeneroJuego

@{
    ViewData["Title"] = "Detalles del genero";
}



<div class="p-3">
    <h1>Informacion del genero</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreGenero)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionGenero)
        </dd>
    </dl>
    <div>
        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model?.GeneroId">Edit</a> |
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

