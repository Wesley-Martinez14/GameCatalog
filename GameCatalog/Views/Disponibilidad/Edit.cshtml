@model GameCatalog.Models.Disponibilidad

@{
    ViewData["Title"] = "Editar la disponibilidad";
}
<div class="p-3">
<h1>Edite los datos que desees</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DisponibilidadId" />
            <div class="form-group">
                <label asp-for="NombreDisponibilidad" class="control-label">Disponibilidad</label>
                <input asp-for="NombreDisponibilidad" class="form-control" />
                <span asp-validation-for="NombreDisponibilidad" class="text-danger"></span>
            </div>
                <div class="form-group d-flex justify-content-end gap-2 pt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
