@model GameCatalog.Models.Disponibilidad

@{
    ViewData["Title"] = "Borrar disponibilidad";
}


<div class="p-3">
    <h1>Estas seguro que quieres borrarlo?</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Disponibilidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreDisponibilidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DisponibilidadId" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </form>
</div>
