@model GameCatalog.ViewModels.EditRolePermissionsViewModel

<form asp-action="EditPermissions" method="post">
    <input type="hidden" asp-for="RoleId" />
    <h3>@Model.RoleName</h3>

    @for (int i = 0; i < Model.Permissions.Count; i++)
    {
        <div class="form-check">
            <input type="checkbox" asp-for="Permissions[i].IsSelected" class="form-check-input" />
            <input type="hidden" asp-for="Permissions[i].PermissionId" />
            <input type="hidden" asp-for="Permissions[i].NombrePermiso" />
            <input type="hidden" asp-for="RoleName" />
            <label class="form-check-label">@Model.Permissions[i].NombrePermiso</label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar permisos</button>
</form>
