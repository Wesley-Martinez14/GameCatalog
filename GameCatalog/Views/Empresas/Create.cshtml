@model GameCatalog.Models.Empresa

@{
    ViewData["Title"] = "Agregar empresa";
}

<div class="p-3">
    <h1>Ingrese los datos para agregar la empresa</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="NombreEmpresa" class="control-label"> Nombre de la Empresa</label>
                <input asp-for="NombreEmpresa" class="form-control" />
                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="InfoEmpresa" class="control-label"> Informacion de la Empresa</label>
                <input asp-for="InfoEmpresa" class="form-control" />
                <span asp-validation-for="InfoEmpresa" class="text-danger"></span>
            </div>
                <div class="form-group d-flex justify-content-md-end gap-2 pt-3">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
