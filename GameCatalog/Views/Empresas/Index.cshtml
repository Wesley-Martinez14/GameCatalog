@model IEnumerable<GameCatalog.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

<div class="p-2">
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered">
    <thead>
        <tr>
            <th>
                        @Html.DisplayNameFor(m => m.NombreEmpresa)
            </th>
            <th>
                        @Html.DisplayNameFor(m => m.InfoEmpresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoEmpresa)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.EmpresaId">Editar</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.EmpresaId">Detalles</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.EmpresaId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
        </table>
    }
    else
    {
        <p>No hay empresas registradas</p>
    }
    <div class="d-flex justify-content-end pt-2">
        <a asp-action="Create" asp-controller="Empresas" class="btn btn-primary">Agregar empresa</a>
    </div>
</div>