@model GameCatalog.Models.Empresa

@{
    ViewData["Title"] = "Editar Empresa";
}
<div class="p-3">
<h1>Edite los datos que desees</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpresaId" />
            <div class="form-group">
                <label asp-for="NombreEmpresa" class="control-label">Nombre de la empresa</label>
                <input asp-for="NombreEmpresa" class="form-control" />
                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoEmpresa" class="control-label">Informacion de la empresa</label>
                <input asp-for="InfoEmpresa" class="form-control" />
                <span asp-validation-for="InfoEmpresa" class="text-danger"></span>
            </div>
                <div class="form-group d-flex justify-content-end gap-2 pt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
